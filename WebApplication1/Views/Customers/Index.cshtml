@model IEnumerable<WebApplication1.Models.Customer>

@{
    ViewBag.Title = "客服信息管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="index.html">控制面板</a>
        <i class="icon-angle-right"></i>
    </li>
    <li>
        <i class="icon-group"></i>
        <a href="@Url.Action("")">客服管理</a>
    </li>

</ul>



<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon plus"></i>@Html.ActionLink("新增", "Create", new { @class = "halflings-icon plus" })<span class="break"></span>客服列表</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th class="center">账号</th>
                        <th class="center">姓名</th>
                        <th class="center">职务</th>
                        <th class="center">微信号</th>
                        <th class="center">手机号</th>
                        <th class="center">QQ</th>
                        <th class="center">电子邮件</th>
                        <th class="center">拥有客户超时</th>
                        <th class="center">允许登录</th>
                        <th class="center">接受数据</th>
                        <th class="center">操作</th>
                    </tr>
                </thead>
                <tbody>

@foreach (var item in Model)
{

                    <tr>
                        <td class="center">@Html.DisplayFor(modelItem => item.cs_account)</td>
                        <td class="center">@Html.DisplayFor(modelItem => item.cs_name)</td>
                        <td class="center">@Html.DisplayFor(modelItem => item.cs_post)</td>
                        <td class="center">@Html.DisplayFor(modelItem => item.cs_wx)</td>
                        <td class="center">@Html.DisplayFor(modelItem => item.cs_phone)</td>
                        <td class="center">@Html.DisplayFor(modelItem => item.cs_qq)</td>
                        <td class="center">@Html.DisplayFor(modelItem => item.cs_email)</td>
                        <td class="center">@Html.DisplayFor(modelItem => item.cs_overtime)</td>
                        <td class="center">@Html.DisplayFor(modelItem => item.cs_open)</td>
                        <td class="center">@Html.DisplayFor(modelItem => item.cp_id)</td>
                        <td class="center">
                            
                            <a class="btn btn-success" href="@Url.Action("Details", "Customers", new {id=item.cs_id})">
                                <i class="halflings-icon white zoom-in"></i>
                            </a>
                            <a class="btn btn-info" href="@Url.Action("Edit", "Customers", new {id=item.cs_id})">
                                <i class="halflings-icon white edit"></i>
                            </a>
                            <a class="btn btn-danger" href="@Url.Action("Delete", "Customers", new {id=item.cs_id})">
                                <i class="halflings-icon white trash"></i>
                            </a>
                            
                     
               
                        </td>
                    </tr>
}
                </tbody>
            </table>
        </div>
    </div><!--/span-->

</div><!--/row-->

